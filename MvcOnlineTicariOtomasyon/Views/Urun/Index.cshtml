@model List<Urun>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Urunid</td>
            <td>@item.UrunAd</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyat</td>
            <td>@item.SatisFiyat</td>
            <td>@item.Kategori.KategoriAd</td>
            <td>@item.UrunGorsel</td>
            <td>
                <a href="/Urun/UrunSil/@item.Urunid" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="@Url.Action("Duzenle","Urun",new { id=item.Urunid})" class="btn btn-warning">GÜNCELLE</a>
            </td>

        </tr>

    }
</table>

<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>