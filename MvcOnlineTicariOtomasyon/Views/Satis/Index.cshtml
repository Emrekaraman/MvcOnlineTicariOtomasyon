@model List<SatisHaraket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Satisid</td>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>

            @*kategori controllerine git/KategoriSil ActionResultgit//foreach dönen ıd al*@
            <td><a href="/Kategori/KategoriSil/@item.Personelid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@item.Personelid" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Satis/YeniSatis" class="btn btn-primary"> Yeni Satış Yap</a>



