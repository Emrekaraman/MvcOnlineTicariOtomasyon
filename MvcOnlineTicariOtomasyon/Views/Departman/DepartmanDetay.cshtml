@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>DepartmanDetaySayfası</h2>
<br />
<ol class="breadcrumb  mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>PERSONE ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>GORSEL</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Personelid</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>@item.PersonelGorsel</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@item.Personelid" class="btn btn-default" style="background-color:forestgreen">Satışlar</a><td>
        </tr>
    }
</table>